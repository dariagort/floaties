<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add a new floaty</h3>
        <%= simple_form_for @floaty do |f| %>
            <%= f.input :title %>
            <%= f.input :photo, as: :file %>
            <%= f.input :category, collection: ["Canoe", "Floating house", "Paddle", "Floatie", "Board"] %>
            <%= f.input :details %>
            <%= f.input :city %>
            <%= f.input :address, input_html: {class: "d-none"}%>
            <%= f.input :address,
                        input_html: {data: {address_autocomplete_target: "address"}},
                        wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
                        %>
            <%= f.input :price %>
            <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
