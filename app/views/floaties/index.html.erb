<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1><strong>Floaties</strong>!</h1>
    <p>Search for anything that stays above water...</p>
    <%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>

  </div>
</div>
<div class="container">
<!--banner-->
  <h1>My floaties</h1>
  <%= link_to "ADD YOUR FLOATY", new_floaty_path, class: "btn btn-ghost-yellow"%>
  <%# <h1>Test</h1> %>

  <div class="card-grid">
    <% @floaties.each do |floaty| %>
      <%= link_to floaty_path(floaty), :class => "card-floaty" do %>
        <% if floaty.photo.attached? %>
          <%= cl_image_tag floaty.photo.key, height: 300, width: 400, crop: :fill %>
        <% else %>
          <%= image_tag "rubber_duck.jpg" %>
        <% end %>
        <h3><%= floaty.title %></h3>
        <p><%= floaty.price %></p>
      <% end %>
    <% end %>
  </div>
</div>
