<div class="container">
  <h1>My floaties</h1>


  <div class="card-grid">
    <% @floaties.each do |floaty| %>
      <%= link_to floaty_path(floaty), :class => "card-floaty" do %>
        <% if floaty.photo.attached %>
          <%= cl_image_tag("eznprkvwgdabhzpidwqe", width: 400, height: 300, crop: :fill) %>
        <% else %>
          <%= image_tag "rubber_duck.jpg" %>
        <% end %>
        <h3><%= floaty.title %></h3>
        <p><%= floaty.price %></p>
      <% end %>
    <% end %>
  </div>
</div>
